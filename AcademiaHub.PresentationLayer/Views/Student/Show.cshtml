 @model Student

<div class="container mt-5">
    <h2 class="text-center mb-5">Student Details</h2>

    <div class="card">
        <div class="row no-gutters">
            <!-- Profile Image and Full Name -->
            <div class="col-md-4 text-center">
                <img src="/students/@Model.ImageFileName" class="card-img mb-3" alt="Profile Image" />
                <h3 class="font-weight-bold">@Model.FirstName @Model.LastName</h3> <!-- Concatenated First & Last Name -->
            </div>

            <!-- Details -->
            <div class="col-md-8">
                <div class="card-body">
                    <div class="row">
                        <!-- Left Side -->
                        <div class="col-md-6">
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Enrollment No:</strong></div>
                                <div class="col-md-6">@Model.EnrollmentNo</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Email:</strong></div>
                                <div class="col-md-6">@Model.Email</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Gender:</strong></div>
                                <div class="col-md-6">@Model.Gender</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Mobile:</strong></div>
                                <div class="col-md-6">@Model.Mobile</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Admission Date:</strong></div>
                                <div class="col-md-6">@Model.AdmissionDate.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Date of Birth:</strong></div>
                                <div class="col-md-6">@Model.DateOfBirth.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Class:</strong></div>
                                <div class="col-md-6">@Model.ClassId</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Section:</strong></div>
                                <div class="col-md-6">@Model.SectionId</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Mother Tongue:</strong></div>
                                <div class="col-md-6">@Model.MotherTongue</div>
                            </div>
                        </div>

                        <!-- Right Side -->
                        <div class="col-md-6">
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Religion:</strong></div>
                                <div class="col-md-6">@Model.Religion</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Place of Birth:</strong></div>
                                <div class="col-md-6">@Model.PlaceOfBirth</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Village:</strong></div>
                                <div class="col-md-6">@Model.Village</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Town:</strong></div>
                                <div class="col-md-6">@Model.Town</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>State:</strong></div>
                                <div class="col-md-6">@Model.State</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Aadhar Number:</strong></div>
                                <div class="col-md-6">@Model.AadharNumber</div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Parent ID:</strong></div>
                                <div class="col-md-6">@Model.ParentId</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Guardian ID:</strong></div>
                                <div class="col-md-6">@Model.GuardianId</div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6"><strong>Hosteler ID:</strong></div>
                                <div class="col-md-6">@Model.HostelerId</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Go Back Button -->
    <div class="row">
        <div class="col text-center mt-4">
            <a class="btn btn-primary btn-sm" asp-controller="Student" asp-action="Index">Go Back</a>
        </div>
    </div>
</div>
